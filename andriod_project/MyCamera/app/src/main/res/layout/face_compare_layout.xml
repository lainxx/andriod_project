<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".faceDetection">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/upload_left"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_6596ff"
            android:text="上传图片1"
            android:textColor="@color/color_white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/upload_right"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_6596ff"
            android:text="上传图片2"
            android:textColor="@color/color_white"
            android:textSize="10sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/picture_left"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:maxWidth="180dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"/>





        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/color_6596ff" />
        <ImageView
            android:id="@+id/picture_right"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:maxWidth="180dp"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:layout_height="wrap_content"

            />



    </LinearLayout>



        <TextView
            android:id="@+id/text_face_compare"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:textColor="@color/color_white"
            android:background="@color/color_6596ff"/>

    <com.example.mycamera.SubmitButton
        android:id="@+id/submit_face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="提交"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:sub_btn_duration="2000" />






</LinearLayout>