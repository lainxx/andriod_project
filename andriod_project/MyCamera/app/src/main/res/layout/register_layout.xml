<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:gravity="center_horizontal"




    android:background="#7adfb8"
    tools:context=".login" >

    <include
        android:id="@+id/main_title"
        layout="@layout/title_layout_register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/main_title"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/project_detail_cir" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="User Register"
            android:textColor="#ffffff"
            android:textSize="24sp" />


    </LinearLayout>
    <include
        android:id="@+id/input_layout"
        layout="@layout/input_layout_register"
        android:layout_width="match_parent"
        android:layout_marginTop="50dip"
        android:layout_height="350dip" />


    <com.example.mycamera.SubmitButton
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        app:sub_btn_background="#7adfb8"
        app:sub_btn_duration="2000"
        app:sub_btn_line_color="@color/color_white"
        app:sub_btn_ripple_color="@color/colorPrimary"
        app:sub_btn_tick_color="#7adfb8" />



</LinearLayout>