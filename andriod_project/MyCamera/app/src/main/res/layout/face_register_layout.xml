<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center_horizontal"
    tools:context=".faceDetection">


    <Button
        android:id="@+id/btn_uplaod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传图片"
        android:textColor="@color/color_white"
        android:background="@color/color_6596ff"
        android:textSize="12sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/picture_register"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="100pt"
            android:maxWidth="200pt"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"

            />
        <com.example.mycamera.SubmitButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提交"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:sub_btn_duration="2000" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_6596ff"
            >


            <TextView
                android:id="@+id/response_text_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>


    </LinearLayout>



</LinearLayout>